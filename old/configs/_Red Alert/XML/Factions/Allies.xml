<?xml version="1.0" encoding="UTF-8"?>

<!-- =================================== -->
<!-- Red Horizon XML - Red Alert: Allies -->
<!-- =================================== -->

<faction:FactionData xmlns="http://www.westwood.com/redalert"
	xmlns:faction="http://www.ultraq.net.nz/redhorizon/factions"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.ultraq.net.nz/redhorizon/factions ../../../Schema/Factions.xsd">

	<!-- Allied Forces -->
	<faction:Faction
		ID="allies"
		Playable="SINGLE">
		<faction:Radar
			ID="AlliedRadar"
			Filename="natoradr.shp"/>

		<!-- England -->
		<faction:SubFaction
			ID="England"
			Colour="GREEN"
			Playable="MULTI">
			<faction:Multiplayer
				Armour="1.1"/>
		</faction:SubFaction>

		<!-- France -->
		<faction:SubFaction
			ID="France"
			Colour="TEAL"
			Playable="MULTI">
			<faction:Multiplayer
				RateOfFire="0.9"/>
		</faction:SubFaction>

		<!-- Germany -->
		<faction:SubFaction
			ID="Germany"
			Colour="BROWN"
			Playable="MULTI">
			<faction:Multiplayer
				Firepower="1.1"/>
		</faction:SubFaction>

		<!-- Greece -->
		<faction:SubFaction
			ID="Greece"
			Colour="BLUE"/>

		<!-- Spain -->
		<faction:SubFaction
			ID="Spain"
			Colour="GOLD"/>

		<!-- Turkey -->
		<faction:SubFaction
			ID="Turkey"
			Colour="MAROON"/>

	</faction:Faction>

</faction:FactionData>
