<!-- Red Horizon XML - Red Alert: Warheads -->
<!-- ===================================== -->

<warhead:WarheadData xmlns="http://www.westwood.com/redalert"
	xmlns:warhead="http://www.ultraq.net.nz/redhorizon/warheads"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.ultraq.net.nz/redhorizon/warheads ../../../Schema/Warheads.xsd">

	<!-- Small Arms (machine guns) -->
	<warhead:Warhead
		ID="SA"
		Template="DefaultWarhead"
		InfDeathAnim="TWIRL"
		Spread="3">
		<warhead:Effectiveness
			Armour="none"
			Damage="1.0"/>
		<warhead:Effectiveness
			Armour="wood"
			Damage="0.5"/>
		<warhead:Effectiveness
			Armour="light"
			Damage="0.6"/>
		<warhead:Effectiveness
			Armour="heavy"
			Damage="0.25"/>
		<warhead:Effectiveness
			Armour="concrete"
			Damage="0.25"/>
		<warhead:ImpactAnimation
			ID="SmallArmsImpactAnim"
			Filename="piffpiff.shp"/>
	</warhead:Warhead>

	<!-- Warhead template/defaults -->
	<warhead:Warhead
		ID="DefaultWarhead"
		InfDeathAnim="INSTANT"
		Spread="0">
		<warhead:Effectiveness
			Armour="none"
			Damage="1.0"/>
		<warhead:Effectiveness
			Armour="wood"
			Damage="1.0"/>
		<warhead:Effectiveness
			Armour="light"
			Damage="1.0"/>
		<warhead:Effectiveness
			Armour="heavy"
			Damage="1.0"/>
		<warhead:Effectiveness
			Armour="concrete"
			Damage="1.0"/>
	</warhead:Warhead>

</warhead:WarheadData>
